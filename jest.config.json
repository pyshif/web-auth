{
    "transform": {
        "\\.[tj]sx?$": "ts-jest"
    },
    "rootDir": "./src",
    "moduleNameMapper": {
        "^components(.*)": "<rootDir>/components$1",
        "^hooks(.*)": "<rootDir>/hooks$1",
        "^pages(.*)": "<rootDir>/pages$1",
        "^utils(.*)": "<rootDir>/utils$1",
        "^styles(.*)": "<rootDir>/styles$1",
        "^api(.*)": "<rootDir>/api$1",
        "^store(.*)": "<rootDir>/store$1",
        "^mocks(.*)": "<rootDir>/mocks$1",
        "^images(.*)": "<rootDir>/__mocks__/fileMock.js",
        "\\.(png|svg|jpg|jpeg|gif|mp4|pdf|mpg|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
        "\\.(woff|woff2|eot|ttf|otf|webp)$": "<rootDir>/__mocks__/fileMock.js",
        "\\.s?[ac]ss$": "<rootDir>/__mocks__/styleMock.js"
    },
    "testEnvironment": "jsdom"
}